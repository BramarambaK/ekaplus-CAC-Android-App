<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="4"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/bid_status_icon"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:src="@drawable/ic_log_start"/>
          <View
              android:layout_width="2dp"
              android:id="@+id/dash_view"
              android:layout_marginLeft="@dimen/dimen_25dp"
              android:background="@drawable/bid_log_dash_shp"
              android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView

            android:id="@+id/row_one_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text=""
            android:gravity="left"
            android:textColor="#000"
            android:textSize="17dp"
            />
        <TextView
            android:id="@+id/row_two_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text=""
            android:layout_marginTop="@dimen/dime_5dp"
            android:gravity="left"
            android:textColor="#000"
            android:textSize="18dp"
            />
        <TextView

            android:id="@+id/row_three_tv"
            android:layout_marginTop="@dimen/dime_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text=""
            android:gravity="left"
            android:textColor="#000"
            android:textSize="16dp"
            />


    </LinearLayout>


</LinearLayout>