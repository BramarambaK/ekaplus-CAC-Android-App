<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dime_5dp"
        android:layout_marginBottom="@dimen/dimen_2dp"
        android:layout_marginLeft="@dimen/dime_5dp"
        app:contentPadding="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dime_5dp"
        android:layout_marginTop="@dimen/dimen_2dp"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:id="@+id/main_lay"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/row1"
                android:minHeight="@dimen/dimen_25dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/dimen_20dp"
                    android:id="@+id/status_img"
                    android:layout_marginRight="@dimen/dime_5dp"
                    android:src="@drawable/ic_card_uparrow"
                    android:layout_height="@dimen/dimen_20dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:id="@+id/r1c1"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    style="@style/prox_nova_reg_font"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:id="@+id/r1c2"
                    android:gravity="end"
                    android:textSize="12dp"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    style="@style/prox_nova_reg_font"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dime_5dp"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/card_view_line_bg"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:id="@+id/row2"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:paddingLeft="@dimen/dime_5dp"
                    android:paddingRight="@dimen/dime_5dp"
                    android:orientation="vertical"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelr2c1"
                        android:textColor="@color/qtc_list_lbl_hint_clr"

                        android:maxLines="1"
                        android:ellipsize="end"
                        style="@style/prox_nova_reg_font"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/r2c1"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/dimen_16dp"
                        android:textColor="@color/black"
                        style="@style/prox_nova_reg_font"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:paddingLeft="@dimen/dime_5dp"
                    android:paddingRight="@dimen/dime_5dp"
                    android:orientation="vertical"
                    android:background="@drawable/left_side_border"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelr2c2"
                        android:textColor="@color/qtc_list_lbl_hint_clr"

                        android:maxLines="1"
                        android:ellipsize="end"
                        style="@style/prox_nova_reg_font"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/r2c2"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:textSize="@dimen/dimen_16dp"
                        android:textColor="@color/black"
                        style="@style/prox_nova_reg_font"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:paddingLeft="@dimen/dime_5dp"
                    android:paddingRight="@dimen/dime_5dp"
                    android:orientation="vertical"
                    android:background="@drawable/left_side_border"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelr2c3"
                        android:textColor="@color/qtc_list_lbl_hint_clr"
                        android:maxLines="1"
                        android:ellipsize="end"
                        style="@style/prox_nova_reg_font"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/r2c3"

                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:textSize="@dimen/dimen_16dp"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        style="@style/prox_nova_reg_font"/>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dime_5dp"
                android:layout_height="@dimen/dimen_1dp"
                android:id="@+id/row3_line_view"
                android:background="@color/card_view_line_bg"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/row3"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dime_5dp"
                    android:paddingRight="@dimen/dime_5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelr3c1"
                        android:textColor="@color/qtc_list_lbl_hint_clr"
                        android:maxLines="1"
                        android:ellipsize="end"
                        style="@style/prox_nova_reg_font"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/r3c1"

                        android:gravity="center"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/dimen_16dp"
                        android:textColor="@color/black"
                        style="@style/prox_nova_reg_font"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:paddingLeft="@dimen/dime_5dp"
                    android:paddingRight="@dimen/dime_5dp"
                    android:orientation="vertical"
                    android:background="@drawable/left_side_border"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/labelr3c2"
                        android:textColor="@color/qtc_list_lbl_hint_clr"

                        android:maxLines="1"
                        android:ellipsize="end"
                        style="@style/prox_nova_reg_font"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:id="@+id/r3c2"

                        android:gravity="center"
                        android:maxLines="1"
                        android:textSize="@dimen/dimen_16dp"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        style="@style/prox_nova_reg_font"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:id="@+id/pur_price_txt"
                android:gravity="left"
                android:maxLines="1"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="14dp"
                android:ellipsize="end"
                android:textColor="@color/black"
                style="@style/prox_nova_reg_font"/>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dime_5dp"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/card_view_line_bg"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/row4"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/r4c1"
                    android:textSize="@dimen/dimen_12dp"
                    android:gravity="center_vertical"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    style="@style/prox_nova_reg_font"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/r4c2"
                    android:textSize="@dimen/dimen_12dp"
                    android:gravity="end|center_vertical"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    style="@style/prox_nova_reg_font"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#979393"
            android:alpha="0.7"
            android:visibility="gone"
            android:id="@+id/cancelled_view"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:text="@string/cancelled_txt"
                android:textSize="30dp"
                android:gravity="center"
                android:visibility="visible"
                android:textColor="@color/white"
                style="@style/prox_nova_reg_font"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>