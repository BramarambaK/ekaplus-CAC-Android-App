<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_lay"
        >
        <RelativeLayout
            android:id="@+id/header"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            app:titleTextAppearance="@style/app_bar_ttl_style"
            style="@style/prox_nova_reg_font"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_bg"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_height="match_parent"
                android:id="@+id/back_img"
                android:src="@drawable/ic_arrow_back"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/service_ttl"
                android:layout_toRightOf="@+id/back_img"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="@string/notification_details"
                style="@style/prox_nova_reg_font"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dimen_20dp"
                android:gravity="center"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:orientation="vertical">

                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r1"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r2"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r3"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r4"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r5"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r6"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r7"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r8"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r9"
                    />
                <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fc_value=""
                    app:fc_label=""
                    android:id="@+id/noti_tv_r10"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/border_bg"
                    android:layout_width="match_parent"
                    android:id="@+id/bid_in_progrs_dtl"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_height="wrap_content">

                    <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:fc_value=""
                        app:fc_label=""
                        android:id="@+id/dimens_hdr_view"
                        />
                    <com.eka.cacapp.ui.farmerConnect.FcDetailTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:fc_value=""
                        app:fc_label=""
                        android:id="@+id/dimen_val_view"
                        />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"/>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>