<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:id="@+id/parent_lay"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/rating_hdr"
            android:background="@drawable/ll_with_bottom_border"
            android:layout_height="@dimen/dimen_50dp">

            <ImageView
                android:layout_width="@dimen/dimen_30dp"
                android:id="@+id/close_icon"
                android:src="@drawable/ic_close"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_30dp"/>
            <TextView
                android:layout_width="match_parent"
                style="@style/prox_nova_reg_font"
                android:text=""
                android:id="@+id/ttl"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:textSize="@dimen/dimen_18dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_hdr"
            android:id="@+id/rating_form">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                style="@style/prox_nova_reg_font"
                android:gravity="center"
                android:textSize="@dimen/dimen_16dp"
                android:text="@string/how_was_your_recent_transaction_with_this_seller"
                android:id="@+id/title_rating"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                style="@style/prox_nova_reg_font"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_below="@id/title_rating"
                android:textSize="@dimen/dimen_18dp"
                android:text=""
                android:id="@+id/offr_name"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offr_name"
                android:stepSize="1"
                android:layout_margin="@dimen/dimen_20dp"
                android:numStars="5"
                android:layout_centerHorizontal="true"
                android:progressTint="@color/rating_str_clr"
                android:id="@+id/rating_bar"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                style="@style/prox_nova_reg_font"
                android:gravity="center"

                android:textStyle="bold"
                android:layout_below="@id/rating_bar"
                android:textSize="@dimen/dimen_20dp"
                android:text="@string/please_rate"
                android:id="@+id/pls_rate_lbl"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                style="@style/prox_nova_reg_font"
                android:gravity="center"

                android:textStyle="bold"
                android:layout_below="@id/pls_rate_lbl"
                android:textSize="@dimen/dimen_18dp"
                android:text=""
                android:id="@+id/rate_dtl"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_margin="@dimen/dimen_10dp"
                android:minHeight="@dimen/dimen_60dp"
                android:id="@+id/btn_lay_one"
                android:layout_below="@+id/rate_dtl"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/pricing"
                    android:gravity="center"
                    android:tag="0"
                    android:textColor="#000"
                    android:layout_margin="@dimen/dime_5dp"
                    android:background="@drawable/ratings_btn_bg"
                    android:id="@+id/pricing_txt"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/quantity"
                    android:gravity="center"
                    android:textColor="#000"
                    android:background="@drawable/ratings_btn_bg"
                    android:layout_marginTop="@dimen/dime_5dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginBottom="@dimen/dime_5dp"
                    android:id="@+id/quantity_txt"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/quality"
                    android:background="@drawable/ratings_btn_bg"
                    android:layout_margin="@dimen/dime_5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:id="@+id/quality_txt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_margin="@dimen/dimen_10dp"
                android:minHeight="@dimen/dimen_60dp"
                android:id="@+id/btn_lay_two"
                android:layout_below="@+id/btn_lay_one"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_10dp"
                    android:layout_weight="0.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/shipment"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_margin="@dimen/dime_5dp"
                    android:background="@drawable/ratings_btn_bg"
                    android:id="@+id/shipment_txt"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/all"
                    android:textColor="#000"
                    android:gravity="center"
                    android:background="@drawable/ratings_btn_bg"
                    android:layout_margin="@dimen/dime_5dp"
                    android:id="@+id/all_txt"
                    />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/btn_lay_two"
                android:hint="@string/remarks"
                android:id="@+id/remarks_edt_txt"
                android:padding="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:background="@drawable/border_bg"
                />
        </RelativeLayout>



        <TextView
            android:layout_width="match_parent"
            android:id="@+id/done_tv"
            style="@style/prox_nova_reg_font"
            android:text="@string/done"
            android:layout_margin="@dimen/dimen_20dp"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            android:background="@color/sign_in_hdr_txt_clr"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/sign_in_hdr_txt_size"
            android:layout_height="@dimen/dimen_50dp"/>


    </RelativeLayout>
</layout>